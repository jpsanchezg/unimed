<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment" >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:background="@drawable/searchboox"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Buscar" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Pagina de inicio" />

        <Button
            android:id="@+id/citasmedicasBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundboxedittext"
            android:minHeight="76dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:text="Citas Medicas" />

        <Button
            android:id="@+id/FiltrosBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="76dp"
            android:background="@drawable/roundboxedittext"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:text="Filtros" />



        <Button
            android:id="@+id/CasosBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundboxedittext"

            android:minHeight="76dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:text="Tus Casos" />
    </LinearLayout>

</LinearLayout>